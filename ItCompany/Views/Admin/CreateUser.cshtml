@model User
@{
    Layout = "_AdminLayout";
}
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-6">
                <section class="panel">
                    <header class="panel-heading">
                       افزودن کاربر جدید
                    </header>
                    <div class="panel-body">
                        <form role="form" method="post" action="@ViewBag.ReturnUrl">
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="form-group">
                                <label>نام</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="نام" required="required">
                            </div>
                            <div class="form-group">
                                <label>نام کاربری</label>
                                <input type="text" class="form-control" asp-for="Username" placeholder="نام کاربری" required="required">
                            </div>
                            <div class="form-group">
                                <label>ایمیل</label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="ایمیل" required="required">
                            </div>
                            <div class="form-group">
                                <label>شماره تماس</label>
                                <input type="text" class="form-control" asp-for="Phone" placeholder="شماره تماس" required="required">
                            </div>
                            <div class="form-group">
                                <label>رمز عبور</label>
                                @if (ViewBag.ReturnUrl == "/Admin/CreateUser")
                                {
                                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور" required="required">
                                }
                                else
                                {
                                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور">
                                    <p class="help-block">برای تغییر رمز عبور این فیلد را پر نمایید</p>
                                }
                            </div>
                            <button type="submit" class="btn btn-info">ثبت کاربر</button>
                        </form>

                    </div>
                </section>
            </div>

        </div>

    </section>
</section>