@model List<User>
@{
    Layout = "_AdminLayout";
    var i =1;
}
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-sm-6">
                <section class="panel">
                    <header class="panel-heading">
                        جدول کاربران
                        <a class="btn btn-success" href="/Admin/CreateUser">افزودن کاربر جدید</a>
                    </header>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>نام</th>
                                <th>نام کاربری</th>
                                <th>ایمیل</th>
                                <th>تلفن</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                           {
                            <tr>
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>
                                    <a class="btn btn-danger" href="/Admin/DeleteUser/@item.Id">حذف</a>
                                    <a class="btn btn-primary" href="/Admin/UpdateUser/@item.Id">ویرایش</a>
                                </td>
                            </tr>
                               i++;
                           }

                        </tbody>
                    </table>
                </section>
            </div>
        </div>

        <!-- page end-->
    </section>
</section>