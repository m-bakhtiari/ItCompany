@model List<Message>
@{
    Layout = "_AdminLayout";
    var i = 1;
}
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        جدول
                    </header>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>تاریخ</th>
                                <th>نام</th>
                                <th>ایمیل</th>
                                <th>شماره تماس</th>
                                <th>موضوع</th>
                                <th>متن</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.RecordDate</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Text</td>
                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                </section>
            </div>
        </div>

        <!-- page end-->
    </section>
</section>