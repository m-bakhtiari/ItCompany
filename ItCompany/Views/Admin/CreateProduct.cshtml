@model ProductDto
@{
    Layout = "_AdminLayout";
}
<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        افزودن مورد جدید
                    </header>
                    <div class="panel-body">
                        <form role="form" method="post" action="@ViewBag.ReturnUrl" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Product.Id" value="@Model.Product.Id" />
                            <div class="form-group">
                                <label>عنوان</label>
                                <input type="text" class="form-control" asp-for="Product.Title" placeholder="عنوان" required="required">
                            </div>
                            <div class="form-group">
                                <label>توضیحات</label>
                                <textarea type="text" class="form-control" asp-for="Product.Description" placeholder="توضیحات" required="required"></textarea>
                            </div>
                            <div class="form-group">
                                <label>گروه</label>
                                <select asp-for="Product.ProductGroupId" class="form-control" style="margin: 0; padding: 0;">
                                    @foreach (var item in (List<ProductGroup>)ViewBag.Group)
                                    {
                                        <option value="@item.Id">@item.Title</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>تصویر</label>
                                <input type="file" asp-for="Image">
                            </div>
                            <button type="submit" class="btn btn-info">ثبت</button>
                        </form>

                    </div>
                </section>
            </div>

        </div>

    </section>
</section>